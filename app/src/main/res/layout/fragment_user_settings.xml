<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#abc8e2"
    android:orientation="vertical"
    tools:context="com.google.firebase.udacity.friendlychat.Fragments.UserSettingsFragment">


    <ImageView
        android:id="@+id/current_user_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="20dp"
        android:minHeight="200dp"
        android:src="@drawable/ic_person" />

    <RelativeLayout
        android:id="@+id/notification_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#abc8e2"
        android:elevation="2dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/notification_settings_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_notifications" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/notification_settings_icon"
            android:layout_alignTop="@+id/notification_settings_icon"
            android:layout_toRightOf="@+id/notification_settings_icon"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_settings_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications and sounds"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you want to receive notifications ?"
                android:textSize="10sp" />
        </LinearLayout>

    </RelativeLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <RelativeLayout
        android:id="@+id/sign_out_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#abc8e2"
        android:clickable="true"
        android:elevation="2dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:text="Log out"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>
